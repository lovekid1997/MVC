@model IEnumerable<BookStore.Models.NhaXuatBan>

@{
    ViewBag.Title = "XemNXB";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}


<div id="TaoMoi">
    <p style="font-size:25px;">
        @Html.ActionLink("Thêm mới nhà xuất bản", "ThemNXB")
    </p>
</div>

@using (Html.BeginForm("KetQuaTimKiemNXB", "TimKiem", FormMethod.Post))
{
    @Html.TextBox("txtTimKiem", "", htmlAttributes:
new {@class="textboxTimKiem",@placeholder="Nhập tên nhà xuất bản cần tìm....." })
    <button type="submit" style="padding: 0px 0px 0px 0px">
        <img src="~/img/search1.png" width="30px" height="30px" />
    </button>

}
<hr style="background-color:black" />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoai)
            </td>
            <td id="TaoMoi1">
                @Html.ActionLink("Chỉnh sửa", "ChinhSuaNXB", new { @MaNXB = item.MaNXB })

            </td>
        </tr>
    }

</table>
<style>
    #TaoMoi a {
        color: black;
        width: auto;
        height: auto;
        -webkit-transition: all .5s ease-out;
    }

        #TaoMoi a:hover {
            background-color: coral;
            font-size: 24px;
            -webkit-transition: all .5s ease-out;
            text-decoration: underline;
        }

    #TaoMoi1 a {
        color: black;
        width: auto;
        height: auto;
        -webkit-transition: all .5s ease-out;
    }

        #TaoMoi1 a:hover {
            background-color: coral;
            -webkit-transition: all .5s ease-out;
            text-decoration: underline;
        }
</style>