<!DOCTYPE html>

<html lang ="vi">
<head>

    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="~/Content/templateAdmin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/templateAdmin/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/templateAdmin/css/style.css" rel="stylesheet" />
    <link href="~/Content/templateAdmin/css/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.8.1-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/admincss/animate.min.css" rel="stylesheet" />
    <link href="~/Content/admincss/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admincss/demo.css" rel="stylesheet" />
    <link href="~/Content/admincss/light-bootstrap-dashboard.css" rel="stylesheet" />
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="red" data-image="assets/img/sidebar-5.jpg" >

            <!--

                Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
                Tip 2: you can also add an image using data-image tag

            -->

            <div class="sidebar-wrapper">


                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index","QuanLySanPham")"><i style="line-height:70%" class="fas fa-book-reader"></i><strong><span class="hidden-tablet"> Quản lý sản phẩm</span></strong></a>
                    </li>

                    <li>
                        <a href="@Url.Action("ThemMoi","QuanLySanPham")"><i style="line-height:70%" class="fas fa-plus"></i><strong><span class="hidden-tablet"> Thêm mới sách</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("ThemChuDe","QuanLySanPham")"><i style="line-height:70%" class="fas fa-plus"></i><strong><span class="hidden-tablet"> Thêm chủ đề</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("ThemNXB","QuanLySanPham")"><i style="line-height:70%" class="fas fa-plus"></i><strong><span class="hidden-tablet"> Thêm nhà xuất bản</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("XemChuDe","QuanLySanPham")"><i style="line-height:70%" class="fas fa-eye"></i><strong><span class="hidden-tablet"> Xem chủ đề</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("XemNXB","QuanLySanPham")"><i style="line-height:70%" class="fas fa-eye"></i><strong><span class="hidden-tablet"> Xem nhà xuất bản</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("XemDonHang","QuanLySanPham")"><i style="line-height:70%" class="fas fa-eye"></i><strong><span class="hidden-tablet"> Xem đơn hàng</span></strong></a>
                    </li>
                    <li>
                        <a href="@Url.Action("XemThongTinKhachHang","QuanLySanPham")"><i style="line-height:70%" class="fas fa-eye"></i><strong><span class="hidden-tablet">Thông tin khách hàng</span></strong></a>
                    </li>

                    <li>
                        <a href="@Url.Action("Index","ThongKe")"><i style="line-height:70%" class="fas fa-chart-pie"></i><strong><span class="hidden-tablet">Thống kê lượt xem sách</span></strong></a>
                    </li>

                    <li>
                        <a href="@Url.Action("ThongKe2","ThongKe")"><i style="line-height:70%" class="fas fa-chart-pie"></i><strong><span class="hidden-tablet">Thống kê lượt khách xem sách</span></strong></a>
                    </li>
                    <li>
                        <a href="#"><i style="line-height:70%" class="fas fa-chart-pie"></i><strong><span class="hidden-tablet">Thống kê lượt khách đăng nhập</span></strong></a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">

                    <div class="collapse navbar-collapse">


                        <ul class="nav navbar-nav navbar-right ">
                            
                            <li>
                                <a href="@Url.Action("Index","Home")">
                                    <p>Trở về trang chủ</p>
                                </a>
                            </li>

                            <li class="separator hidden-lg"></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div style="padding-left:5px; background-color:white"   >
                @RenderBody()
            </div>
        </div>
    </div>


</body>
<!--   Core JS Files   -->
<script src="assets/js/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Charts Plugin -->
<script src="assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="assets/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="assets/js/demo.js"></script>

<script type="text/javascript">
    $(document).ready(function () {

        demo.initChartist();

        $.notify({
            icon: 'pe-7s-gift',
            message: "Welcome to <b>Light Bootstrap Dashboard</b> - a beautiful freebie for every web developer."

        }, {
                type: 'info',
                timer: 4000
            });

    });
</script>
</html>
